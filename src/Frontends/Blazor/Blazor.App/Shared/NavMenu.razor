<div class="bg-light" id="sidebar-wrapper">
    <div class="sidebar-logo">
        @*<img class="img-responsive" id="logo" src="_content/Blazor.App/images/bethanylogo.png" />*@
    </div>
    <div class="profile">
        <div class="profile-bg">
            <img class="img-responsive" src="_content/Blazor.App/images/ToyTrucks.jpg" />
        </div>
        <div class="profile-picture">
            <img class="img-responsive circle account-photo" src="_content/Blazor.App/images/ToyTrucks.jpg" />
        </div>
    </div>
    <div class="menu list-group list-group-flush">
        <NavLink class="list-group-item list-group-item-action bg-light" href="/" Match="NavLinkMatch.All">
            <span class="oi oi-home" aria-hidden="true"></span> Home
        </NavLink>
        @*<NavLink class="list-group-item list-group-item-action bg-light" href="/trucksbycategory">
            <span class="oi oi-list-rich" aria-hidden="true"></span> Trucks
        </NavLink>*@
        @if (Categories == null)
        {
            <p><em>loading...</em></p>
        }
        else
        {
            @foreach (var category in Categories)
            {
                <NavLink class="list-group-item list-group-item-action bg-light" href="@($"/trucksbycategory/{category.CategoryId}")">
                    <span class="oi oi-list-rich" aria-hidden="true"></span>( @category.Name)
                </NavLink>

                
            }
        }
        @*<NavLink class="list-group-item list-group-item-action bg-light" href="/employeeedit">
            <span class="oi oi-list-rich" aria-hidden="true"></span> Add new employee
        </NavLink>*@

    </div>
</div>