@page "/truckedit"
@page "/truckedit/{TruckId:guid}"

@if (!Saved)
{ 
    <section class="employee-edit">
        <h1 class="page-title">Edit details for @Truck.Name</h1>
        <EditForm Model="@Truck"
                  OnValidSubmit="@HandleValidSubmit"
                  OnInvalidSubmit="@HandleInvalidSubmit">
            <DataAnnotationsValidator/>
            <ValidationSummary></ValidationSummary>
            <div class="form-group row">
                <label for="Name" class="col-sm-3">Name: </label>
                <InputText id="Name" class="form-control col-sm-8" placeholder="Enter name of truck"
                           @bind-Value="@Truck.Name"></InputText>
                <ValidationMessage For="@(()=>Truck.Name)" class="offset-sm-3 col-sm-8"/>
            </div>
            <div class="form-group row">
                <label for="Description" class="col-sm-3">Description: </label>
                <InputTextArea id="Description" class="form-control col-sm-8" placeholder="Enter description of truck"
                               @bind-Value="@Truck.Description"></InputTextArea>
                <ValidationMessage For="@(()=>Truck.Description)" class="offset-sm-3 col-sm-8" />
            </div>
            <div class="form-group row">
                <label for="Year" class="col-sm-3">Year: </label>
                <InputNumber id="Year" class="form-control col-sm-8" placeholder="Enter year of truck"
                             @bind-Value="@Truck.Year"></InputNumber>
                <ValidationMessage For="@(()=>Truck.Year)" class="offset-sm-3 col-sm-8" />
            </div>
            <div class="form-group row">
                <label for="Price" class="col-sm-3">Price: </label>
                <InputNumber id="Price" class="form-control col-sm-8" placeholder="Enter price of truck"
                             @bind-Value="@Truck.Price"></InputNumber>
                <ValidationMessage For="@(()=>Truck.Price)" class="offset-sm-3 col-sm-8" />
            </div>
            <div class="form-group row">
                <label for="PreviousPrice" class="col-sm-3">PreviousPrice: </label>
                <InputNumber id="PreviousPrice" class="form-control col-sm-8" placeholder="Enter previous price of truck"
                             @bind-Value="@Truck.PreviousPrice"></InputNumber>
            </div>
            <div class="form-group row">
                <label for="Quantity" class="col-sm-3">Quantity: </label>
                <InputNumber id="Quantity" class="form-control col-sm-8" placeholder="Enter quantity of truck"
                             @bind-Value="@Truck.Quantity"></InputNumber>
                <ValidationMessage For="@(()=>Truck.Quantity)" class="offset-sm-3 col-sm-8 " />
            </div>
            <div class="form-group row">
                <label for="Hidden" class="col-sm-3">Hidden: </label>
                <InputCheckbox id="Hidden" placeholder="Hide truck?"
                               @bind-Value="@Truck.Hidden"></InputCheckbox>
            </div>
            <div class="form-group row">
                <label for="Damaged" class="col-sm-3">Damaged: </label>
                <InputCheckbox id="Damaged" placeholder="Is truck damaged?"
                               @bind-Value="@Truck.Damaged"></InputCheckbox>
            </div>
            <button type="submit" class="btn btn-primary edit-btn">Save truck</button>
        </EditForm>
    </section>
}
else
{
    <div class="alert @StatusClass">@Message</div>
}

