@model Web.Models.Api.Truck
<tr>
    <td>
        <img src="@Model.DefaultPhotoPath" alt="Truck plc" />
    </td>
    <td>
        @Model.Name
    </td>
    <td>
        @Model.Year
    </td>
    <td class="bold big">
        @Model.Price
    </td>
    <td>
        <a class="btn-primary" type="button" asp-action="Detail" asp-route-truckId="@Model.TruckId">DETAILS</a>
    </td>
</tr>