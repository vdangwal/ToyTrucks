@model Web.Models.Api.Truck//.View.TruckViewModel
<div class="row mt-5">
    <div class="col-md-4">
        <img src="@Model.DefaultPhotoPath" class="detailImage" alt="Artist pic" />
    </div>
    <div class="col-md-6 ml-1">
        <div class="row">
            <div class="columnHeader">@Model.Categories.FirstOrDefault().Name.ToUpper()</div>
        </div>
        <div class="row mt-2 bold">
            <h1>@Model.Name</h1>
        </div>
        <div class="row mt-2">
            <h3>@Model.Photos.FirstOrDefault().PhotoPath</h3>
        </div>

        <div class="row mt-4">
            @Model.Description
        </div>
        <div class="row mt-5">
            <h3><span class="bold">$@Model.Price</span></h3><span class="mt-1">&nbsp;&nbsp;&nbsp; PER
                TRUCK</span>
        </div>
    </div>
</div>
<div class="row mt-5">
    <div class="col">
        <hr />
    </div>
</div>
<div class="row mt-4">
    <div class="col offset-4">
        <form class="form">@* asp-action="AddLine" asp-controller="ShoppingBasket"> *@
            <div class="row">
                <label class="columnHeader mt-2">QUANTITY:</label>
                <select name="TicketAmount" class="ml-5 w-25">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>

                <button type="submit" class="btn btn-primary ml-4">ADD TO BASKET</button>
                @* <input asp-for="TruckId" type="hidden" />
                    <input asp-for="Price" type="hidden" /> *@
            </div>
        </form>
    </div>
</div>
